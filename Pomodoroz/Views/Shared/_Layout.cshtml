<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>

    @* for styling *@
    <link href="@Url.Content("~/Content/bootstrap.css")" type="text/css" rel="stylesheet"/>

    @* for audio *@
    <script src="@Url.Content("~/Scripts/soundmanager2.js")" type="text/javascript"></script>

    @* for timer *@
    <script src="@Url.Content("~/Scripts/jquery.the_final_countdown.1.1.min.js")" type="text/javascript"></script>

</head>
<body>

    <div class="navbar">
        <div class="navbar-inner">
            <div class="container">
                <ul class="nav">
                    <li>@Html.ActionLink("Activities", "Index", "Activity")</li>
                    <li>@Html.ActionLink("New Activity", "Create", "Activity")</li>
                </ul>
                <div class="container">
                    <div id="logindisplay" style="padding-top:10px;">
                        @Html.Partial("_LogOnPartial")
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page">

        <section id="main" class="container">
            @RenderBody()
        </section>

        <footer>
        </footer>

    </div>    
    <script src="../../Scripts/application.js" type="text/javascript"></script>
</body>
</html>
